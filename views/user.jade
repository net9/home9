.section#section-userinfo
  h2= msg('my-info')
  table.info-table
    - if (userinfo.nickname)
      tr
        th= msg('Nickname')
        td= userinfo.nickname
    - if (userinfo.fullname)
      tr
        th= msg('full-name')
        td= userinfo.fullname
    tr
      th= msg('Email')
      td
        a(href="mailto:" + userinfo.email)= userinfo.email
    - if (userinfo.mobile)
      tr
        th= msg('Mobile')
        td= userinfo.mobile
    - if (userinfo.website)
      tr
        th= msg('Website')
        td
          a(href=userinfo.website)= userinfo.website
    - if (userinfo.address)
      tr
        th= msg('Address')
        td= userinfo.address
    - if (userinfo.birthdate)
      tr
        th= msg('birth-date')
        td= msg('birthdate-format', userinfo.birthdate.slice(0, 4), userinfo.birthdate.slice(4, 6), userinfo.birthdate.slice(6, 8))
    - if (userinfo.bio)
      tr
        th= msg('Bio')
        td= userinfo.bio

.section#section-apps
  h2= msg('my-accounts')
  h2= msg('my-domains')
  - if (domains.length)
    ul.operable-list!= partial('partials/domainitem', domains)
  - else
    div= msg('no-apps-yet')
  a.button(href="/regdomain")= msg('register-new-domain')
