!!!
html
  head
    title= pageTitle(title)
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    #container
      #header
        #menu
          - if (session.username)
            != msg('logged-in-as', session.username)
            a#logout(href="/logout")= msg('Logout')
          - else
            a#logout(href="/login")= msg('Login')
        a#logo(href="/")
          img(src="/images/net9.gif", width="130", height="130")
          img(src="/images/people.svg", width="250", height="100")
      #content
        h1= title
        != partial('partials/flash', flashArray)
        #body!= body
        .clear
      #footer!= msg('footer-text')
    script(type="text/javascript", src="/javascripts/script.js")